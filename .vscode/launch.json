    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: csv_fix Module (Installed)",
            "type": "debugpy",
            "request": "launch",
            "module": "csv_fix",
            "args": [
                "misc/test_case.csv"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: csv_fix Module (Without Install)",
            "type": "debugpy",
            "request": "launch",
            "module": "csv_fix",
            "args": [
                "-t",
                "-s",
                "|",
                "misc/test_case.csv"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Python: pytest (All Tests)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}